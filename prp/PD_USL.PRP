func fusl_scht()
local lk:=lastkey(),ofltr:=dbfilter(),_id,n
local n_usl,nrows,_summa,_psumma,_sch_no:=-1,orn

do case
 case lk=27	//ESC
  Finish=.t.
  retu 0  

 case lk=13	//ENTER
  orn:=dschet->(recno())
  usl_opl()
  sele dschet
  set order to 2
  goto orn
  rDBE_refresh:=.t.

 case lk=-8	//F9
  n=alert('Выберите тип документа:',{"ОТМЕНА","СЧЕТ","СЧЕТ-ФАКТУРА"},"gr+/b")
  if n=2
   MS_usl()
  elseif n=3
   MSF_usl()
  endif

 case lk=-2	//F3
  if dschet->id>0 .and.;
     alert("Внести изменение в содержание счета?;;"+;
           "ВНИМАНИЕ!!! ВНИМАНИЕ!!! ВНИМАНИЕ!!!;Данное действие невозможно будет отменить!",{"Н Е Т"," Д А "})=2
   sele mats
   usl_selector() 
   sele mats
   set filter to mats->dog_id=pudog->id .and. sm_id=0 .and. mats->sch_id=dschet->id
   go top
   mflockf(100,5)
   do while !eof()
    repl mats->sch_tmp with .t., mats->sch_tmp1 with .t.
    skip
   enddo
   unlock

   set filter to !deleted() .and. mats->sch_tmp .and. mats->dog_id=pudog->id
   go top
   usl_mark()   
   sele mats
   set filter to !deleted() .and. sm_id=0 .and. mats->sch_tmp1 .and. mats->dog_id=pudog->id
   go top
   sum mats->summa*0+1, mats->summa, mats->psumma to nrows, _summa, _psumma
   if nrows<1
    message("Счет обнулен! Подлежит удалению!",3,"gr+/r","r+/r")
    sele dschet
    mflockf(100,5)
    dele
    unlock
    skip
    rDBE_refresh:=.t.
   else
    sele mats
    set filter to !deleted() .and. sm_id=0 .and. mats->sch_tmp1 .and. mats->dog_id=pudog->id
    go top
    mflockf(100,5)
    do while !eof()
     repl mats->sch_id with dschet->id
     skip
    enddo
    unlock
    sele dschet
    mrlockF(100,5)
    repl summa with _psumma, fsumma with _summa, fsald with _summa-dschet->fopl
    unlock
   endif
   rDBE_refresh:=.t. 
  endif


 case lk=22	//INS
  if usl_selector()>0 .and. alert("Добавить новую строку?",{"Н Е Т"," Д А "})=2
   rDBE_refresh:=.t. 

   usl_mark()   
   sele mats
   set filter to !deleted() .and. sm_id=0 .and. mats->dog_id=pudog->id .and. mats->sch_tmp1
   go top

   sum mats->summa*0+1, mats->summa, mats->psumma to nrows, _summa, _psumma
   if nrows>0 .and. alert('Выбрано '+astr(int(nrows))+" строк на сумму "+;
                          alltrim(transform(_summa,"9999999.99"))+" (предоплата - "+;
                          alltrim(transform(_psumma,"9999999.99"))+");;"+;
                          'Создать новый счёт используя данные цифры?',{'Н Е Т',' Д А '})=2
    sele dschet
    _sch_no:=findmschnum()+1
    set filter to
    _id=mNetAppBl(100,5)
    sele mats
    go top
    mflockf(100,5)
    do while !eof()
     repl sch_id with _id
     skip
    enddo
    unlock
    go top
    sele dschet
    mrlockF(100,5)
    repl dog_id with pd_id, summa with _psumma, fsumma with _summa,;
         sch_tip with 3, sch_no with _sch_no, cdate with date(),;
         sdate with date(), zak_id with zk_id, usl_id with mats->mat_id,;
         fsald with _summa-dschet->fopl
    unlock
    set filter to &ofltr
    set order to 1
    go top
    seek ID_ZL9(_id)
    set order to 2
    rDBE_refresh:=.t.
    KErase(chr(32))
   endif
  endif
  sele dschet

 case dschet->id>0 .and. lk=7	//DEL
  if alert("Удалить счет №"+astr(dschet->sch_no)+;
           " от "+dtoc(dschet->sdate)+"г. сумма "+;
           transform(dschet->summa,"9999999.99")+"руб.",{"Н Е Т"," Д А "})=2
   if alert("Вы точно уверены, что хотите удалить счет №"+astr(dschet->sch_no)+;
           " от "+dtoc(dschet->sdate)+"г. сумма "+;
           transform(dschet->summa,"9999999.99")+"руб."+;
            ";;ВНИМАНИЕ! ВНИМАНИЕ! ВНИМАНИЕ! ВНИМАНИЕ! ВНИМАНИЕ!;"+;
            "Данное действие невозможно будет отменить!",{"Н Е Т"," Д А "})=2
    sele dopl
    set filter to dopl->sch_id=dschet->id
    mflockF(100,5)
    dele all
    unlock 
    sele dschet
    mflockF(100,5)
    dele
    unlock 
    skip
    rDBE_refresh:=.t. 
   endif
  endif

endcase
retu








