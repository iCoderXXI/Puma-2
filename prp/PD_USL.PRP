func frde_usl()
local lk:=lastkey(),ofltr:=dbfilter(),_id
local _summa:=0,_psumma:=0
local _summ:=0,_psumm:=0,orn,orn1,nrows, s_id

do case
 case lk=27	//ESC
  Finish=.t.
  retu 0  

 case lk=22	//INS
  if alert("Добавить новую строку?",{"Н Е Т"," Д А "})=2
   rDBE_refresh:=.t. 
   sele mats
   set filter to   
   mNetAppBl(100,5)
   _id=ID
   mrlockF(100,5)
   repl dog_id with pd_id, pNDS with varedit("Ставка НДС",18.00,.t.),vnds with 1
   unlock
   set filter to &ofltr
   set order to 1
   go top
   seek id_zl9(_id)
   set order to 2
   KErase(chr(32))
//   frde_usl()
  endif

 case mats->id>0 .and. lk=7	//DEL
  if alert("Удалить выделенную строку?;"+;
           alltrim(GetRelValue("mats","mat_id","ulist","id","usluga")),{"Н Е Т"," Д А "})=2
   if alert("Вы точно уверены, что хотите удалить выделенную строку?;"+;
            alltrim(GetRelValue("mats","mat_id","ulist","id","usluga"))+;
            ";;ВНИМАНИЕ! ВНИМАНИЕ! ВНИМАНИЕ! ВНИМАНИЕ! ВНИМАНИЕ!;"+;
            "Данное действие невозможно будет отменить!",{"Н Е Т"," Д А "})=2
    sele mats
    s_id:=mats->sch_id
    mflockF(100,5)
    dele
    unlock 
    skip
//-------------
    set filter to &("mats->sch_id="+astr(s_id)+" .and. !deleted()")
    go top
    sum mats->summa*0+1, mats->summad, mats->psummad to nrows, _summa, _psumma
    sele dschet
    set filter to
    go top
    set order to 1
    seek ID_ZL9(s_id)
    set order to 2  
    mrlockF(100,5)
    repl dschet->summa with _psumma, dschet->fsumma with _summa,;
         dschet->fsald with dschet->fsumma-dschet->fopl
    unlock
    sele mats
    set filter to &ofltr
    set order to 2
    go top
//-------------
    rDBE_refresh:=.t. 
   endif
  endif

 case lk=-1	//F2
  sprav()

 //Сообщение из родительской функции о том. что произошли изменения...
 //Произвести перерасчёт "чего-то там", при необходимости...
 //Что собственно тут и делается (ниже)...
 case lk=255
   _summa=mats->cena*mats->kolvo
   _psumma=mats->cena*mats->pkolvo
   _nds=mats->pnds
  if _summa!=mats->summa .or. _psumma!=mats->psumma
   sele mats
   mrlockf(100,5)
   repl mats->summa with _summa, mats->psumma with _psumma,;
        mats->nds with _summa/(100+iif(mats->vnds=0,_nds,0))*_nds,;
        mats->nds_p with _psumma/(100+iif(mats->vnds=0,_nds,0))*_nds,;
        mats->summad with _summa+iif(mats->vnds=0,mats->nds,0),;
        mats->psummad with _psumma+iif(mats->vnds=0,mats->nds_p,0)
   unlock
   show_usl_summs()
   rDBE_refresh:=.t. 
  endif  

endcase
retu



func show_usl_summs()
local ocol:=setcolor("gr+/gr"),ofltr,mof
local _summ:=0,_psumm:=0,orn,orn1,nrows, _sch_id, _summa, _psumma

sele mats
_sch_id=mats->sch_id
mof:=dbfilter()
orn:=recno()
go top
sum mats->summa*0+1, mats->summad, mats->psummad to nrows, _summ, _psumm
go top
goto orn
//alert(astr(orn)+" "+astr(recno())+" "+astr(_sch_id))

@22,49 say "["+transform(nrows,"9999")+":"+transform(_summ,"9999999.99")+"|"+transform(_psumm,"9999999.99")+"]"

if nrows>0
 sele pudog
 orn1:=recno()
 go top
 set order to 1
 seek ID_ZL9(mats->dog_id)
 set order to 2
 if found()
  mrlockf(100,5)
  repl pudog->p_cena with _psumm, pudog->f_Cena with _summ
  unlock
 endif
 goto orn1
 sele mats
// alert("ЗАМЕНА! "+astr(_sch_id)+iif(_sch_id<1,";Проверь, почему _sch_id=0!",""))
 if _sch_id>0
  ofltr:=dbfilter()
  set filter to &("mats->sch_id="+astr(_sch_id)+" .and. !deleted()")
  go top
  sum mats->summa*0+1, mats->summad, mats->psummad to nrows, _summa, _psumma
  sele dschet
  set filter to
  go top
  set order to 1
  seek ID_ZL9(_sch_id)
  set order to 2  
  mrlockF(100,5)
  repl dschet->summa with _psumma, dschet->fsumma with _summa,;
       dschet->fsald with (dschet->fsumma-dschet->fopl)
  unlock
  sele mats
  set filter to &ofltr
  set order to 2
  go top
  goto orn
 endif
 sele mats
 goto orn
endif

setcolor(ocol)
retu








