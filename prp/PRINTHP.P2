*******************************************************************************
*                                                                             *
*                               Печать строки                                 *
*                                                                             *
*******************************************************************************
STATIC FUNCTION ToPrint(String)
Local SCons,SPrn
SCons := Set(_SET_CONSOLE,.F.)
SPrn  := Set(_SET_PRINTER,.T.)
QOut(String)
Set(_SET_PRINTER,SPrn)
Set(_SET_CONSOLE,SCons)
Return NIL

*******************************************************************************
*                                                                             *
*                              Выделенный режим                               *
*                                                                             *
*******************************************************************************
FUNCTION EmphaSized(cString)
RETURN '(s3B'+cString+'(s0B'

*******************************************************************************
*                                                                             *
*                               Двойная ширина                                *
*                                                                             *
*******************************************************************************
FUNCTION DoubleWidth(cString)
RETURN '(s7H'+cString+'(s10H'

*******************************************************************************
*                                                                             *
*                             Размер левого поля                              *
*                                                                             *
*******************************************************************************
FUNCTION LeftMarg(nSize)
Return '&a'+AllTrim(Str(nSize))+'L'

*******************************************************************************
*                                                                             *
*                          Число символов на дюйм                             *
*                                                                             *
*******************************************************************************
FUNCTION SetPrnCPI(nCPI)
RETURN '(s'+AllTrim(Str(nCPI))+'H'

*******************************************************************************
*                                                                             *
*                            Ориентация страницы                              *
*                                                                             *
*******************************************************************************
FUNCTION PageOrient(nCase)
RETURN '&l'+AllTrim(Str(nCase))+'O'

*******************************************************************************
*                                                                             *
*                                Подчеркивание                                *
*                                                                             *
*******************************************************************************
FUNCTION UnderLine(cString)
RETURN '&dD'+cString+'&d@'

*******************************************************************************
*                                                                             *
*                               Верхний индекс                                *
*                                                                             *
*******************************************************************************
FUNCTION SupScript(cString)
RETURN '*p-15Y'+cString+'*p+15Y'

*******************************************************************************
*                                                                             *
*                                Нижний индекс                                *
*                                                                             *
*******************************************************************************
FUNCTION SubScript(cString)
RETURN '*p+20Y'+cString+'*p-20Y'

*******************************************************************************
*                                                                             *
*                            Число строк на дюйм                              *
*                                                                             *
*******************************************************************************
FUNCTION SetPrnLPI(nLPI)
RETURN '&l'+AllTrim(Str(nLPI))+'D'

*******************************************************************************
*                                                                             *
*                         Определение типа принтера                           *
*                                                                             *
*******************************************************************************
FUNCTION GetPrinter()
RETURN 'HP A4'
